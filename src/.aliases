# Secrets Management
# Lazily load the Gemini API key from 1Password on first use
gemini() {
  if [[ -z "$GEMINI_API_KEY" ]]; then
    export GEMINI_API_KEY=$(op read "op://Private/gemini_api_key/credential" --account my.1password.com)
  fi
  command gemini "$@"
}
