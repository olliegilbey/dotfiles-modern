# Quick documentation lookup
function docs() {
    if [[ $# -eq 0 ]]; then
        echo "Usage: docs <command>"
        echo "Quick documentation lookup"
        return 1
    fi
    
    case $1 in
        git) echo "üìö Git quick reference:"; echo "  git status, git add ., git commit -m 'msg', git push"; ;;
        docker) echo "üìö Docker quick reference:"; echo "  docker ps, docker build -t name ., docker run -it name"; ;;
        npm) echo "üìö NPM quick reference:"; echo "  npm install, npm run dev, npm run build, npm test"; ;;
        cargo) echo "üìö Cargo quick reference:"; echo "  cargo new, cargo build, cargo run, cargo test"; ;;
        *) man $1 2>/dev/null || echo "‚ùå No documentation found for: $1"; ;;
    esac
}

